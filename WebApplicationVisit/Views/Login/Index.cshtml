
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Login</title>
    <!--CSS-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize-v0.97.5/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />

    <style type="text/css">
        .modal .modal-footer {
            height:auto;
        }
    </style>

</head>

<body>


    <!-- Modal Structure -->
    <div id="modalResetPassword" class="modal">
        <form class="col s12 m12 l12" onsubmit="validateResetLogin(event)">
            <div class="modal-content">
                <h4>Recordar contraseña</h4>

                <div class="row">
                    <div class="input-field col s12">

                        <i class="material-icons prefix">email</i>
                        <input id="ResetPassword" type="email" class="validate" required>
                        <label for="ResetPassword">Email</label>
                        <label for="ResetPassword" data-error="wrong" data-success="right"> </label>

                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col s6 m6 l6">
                        <p id="textAnswerResetPassword"></p>
                    </div>
                    <div class="col s5 m6 l6">
                        <button id="Resetlogin" class="btn waves-effect waves-light" type="submit" name="action">
                            Restablecer
                            <i class="material-icons right">done</i>
                        </button>
                    </div>
                    

                </div>
                </div>
        </form>
    </div>
    <!--Container -->
    <div class="container">
        <div class="col s12 m6 l6">
            <h2 class="header">Bienvenido</h2>
            <div class="card horizontal">
                <div class="card-image hide-on-small-only">
                    <img src="~/Img/logoSinapsis.png" class="responsive-img">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <form class="col s12 m8 l6" onsubmit="validateLogin(event)">
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">account_circle</i>
                                    <input id="user" type="email" class="validate" required>
                                    <label for="user">Usuario</label>
                                    <label for="user" data-error="wrong" data-success="right"> </label>
                                </div>
                                <div class="input-field col s12">
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input id="password" type="password" class="validate" required>
                                    <label for="password">Contraseña</label>
                                    <label for="password" data-error="wrong" data-success="right"> </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12 m12 l12">
                                    <div class="card-action center">
                                        <button id="login" class="btn waves-effect waves-light" type="submit" name="action">
                                            Login
                                            <i class="material-icons right">done</i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col s12 m12 l12">
                                    <div class="card-action center">
                                        <!-- Modal Trigger -->
                                        <button data-target="modalResetPassword" class="btn modal-trigger">Olvidé mi contraseña
                                            <i class="material-icons right">info_outline</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--End Start COntainer-->
    <!--Scripts
      Order Script
        1. Jquery
        2. Materializr
        3. Function
        4. Function Local
      -->

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Content/materialize-v0.97.5/js/materialize.js"></script>
    <script src="~/Scripts/jsProject/Functions.js"></script>
    <script src="~/Scripts/jsProject/CtrlLogin.js"></script>

</body>
</html>
