
@{
    Layout = null;
}

<!DOCTYPE html>

<<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Restart Password</title>
    <!--CSS-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize-v0.97.5/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />

</head>

<body>
    <!--Container Restart Password-->
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h2 class="header">Restablecer contraseña</h2>
                <div class="card horizontal">
                    <div class="card-image hide-on-small-only">
                        <img src="~/Img/logoSinapsis.png" class="responsive-img">
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <form class="col s12 m12 l12" onsubmit="validatePassword(event)">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">vpn_key</i>
                                        <input id="password" type="password" class="validate" required>
                                        <label for="password">Contraseña</label>
                                        <label for="password" data-error="wrong" data-success="right"> </label>
                                    </div>
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">vpn_key</i>
                                        <input id="passwordVerification" type="password" class="validate" required>
                                        <label for="passwordVerification">Verificar contraseña</label>
                                        <label for="passwordVerification" data-error="wrong" data-success="right"> </label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12 m12 l12">
                                        <div class="card-action center">
                                            <button id="login" class="btn waves-effect waves-light" type="submit" name="action">
                                                Enviar
                                                <i class="material-icons right">done</i>
                                            </button>
                                        </div>
                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card-action center">
                    <p id="informationPassword"></p>
                </div>
            </div>
        </div>

    </div>

    <!--Import jQuery before materialize.js-->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Content/materialize-v0.97.5/js/materialize.js"></script>
    <script src="~/Scripts/jsProject/Functions.js"></script>
    <script src="~/Scripts/jsProject/CtrlRestartPassword.js"></script>

</body>
</html>
